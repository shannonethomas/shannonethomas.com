---
title: Bloggity Blog
layout: site_layout
navigation: blog
pageable: true
per_page: 10
---

<div class="pagination">
<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>
</div>

<% page_articles.each_with_index do |article, i| %>
  <div class="blog-preview">
    <%# it's weird to put the h1 inside the link like this, but the CSS demands it %>
    <% link_to article do %>
      <h1><small class="date"><%= article.date.strftime('%B %e, 0%Y') %></small> <%= article.title %> </h1>
    <% end %>
    <div class="summary">
      <%= article.summary(180, 'â€¦') %>
    </div>
  </div>
<% end %>

<div class="pagination">
<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
</div>
